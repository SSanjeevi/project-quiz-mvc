<div class="modal-header">
    <button type="button" class="close" ng-click="ctrl.cancel()" aria-hidden="true">×</button>
    <h3 class="modal-title">Select an image</h3>
</div>

<div class="modal-body clearfix">
    <div class="category-avatar" ng-repeat="src in ctrl.categoryImages">
        <button type="button" class="close" ng-click="ctrl.deleteImage(src, $index)" aria-hidden="true">×</button>
        <img src="{{src}}" alt="category avatar" ng-click="ctrl.select(src)"/>
    </div>
</div>

