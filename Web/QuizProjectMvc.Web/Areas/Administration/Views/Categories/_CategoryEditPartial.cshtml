@using QuizProjectMvc.Common
<td>
    <input type="text" ng-model="category.name"
           class="form-control" name="categoryName"
           required ng-minlength="@ModelConstraints.NameMinLength"
           placeholder="Name">
</td>
<td>
    <button class="btn btn-primary" ng-click="ctrl.openImagesMenu(category)">
        Select Image
    </button>
    <a href="{{category.avatarUrl}}" class="hide-overflow">{{category.avatarUrl}}</a>
</td>
<td>
    {{category.quizzesCount}}
</td>
<td class="btn-group">
    <button class="btn btn-primary" ng-click="ctrl.addNew(category)">Save</button>
</td>
