@model IEnumerable<QuizProjectMvc.Web.Areas.Administration.ViewModels.AdvancedCategoryModel>

@{
    ViewBag.Title = "Manage Categories";
}

<section class="wrapper widget" ng-app="categoriesManager" ng-controller="CategoriesController as ctrl">
    <div class="well">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Avatar Url</th>
                <th>Quizzes</th>
                <th class="controls-header">Controls</th>
            </tr>
            </thead>

            <tbody>
            <tr ng-repeat="category in ctrl.categories" edit-category>
            </tr>
            </tbody>

            <tfoot>
            <tr>
                @Html.Partial("_CategoryEditPartial")
            </tr>
            </tfoot>
        </table>
    </div>
</section>

@section styles
{
    @Styles.Render("~/Content/admin")
}

@section scripts
{
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/admin")
}
