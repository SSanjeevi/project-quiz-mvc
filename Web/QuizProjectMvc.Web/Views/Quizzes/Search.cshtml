@model QuizProjectMvc.Web.ViewModels.Quiz.SearchPageViewModel

@{
    ViewBag.Title = "Quiz Search";
    ViewBag.AvailableCategories = Model.Categories;
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
}

<section id="search-filter">
    @Html.Partial("_SearchFormPartial", Model.QuizSearchModel)
</section>

<section id="search-results">
    @foreach (var quiz in Model.Quizzes)
    {
        @Html.Partial("DisplayTemplates/QuizBasicViewModel", quiz);
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-ajax")
    @Scripts.Render("~/bundles/fb")
}