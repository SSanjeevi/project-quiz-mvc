@model QuizProjectMvc.Web.ViewModels.Home.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>Вицове</h1>
<div class="row">
    @foreach (var quiz in Model.Quizzes)
    {
        <div class="col-md-4">
            <p>
                @quiz.Description
            </p>
            <div>@quiz.Category</div>
        </div>
    }
</div>
<h1>Категории</h1>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-2">
            @category.Name
        </div>
    }
</div>